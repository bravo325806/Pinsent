<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/pinsentlogo" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/device_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="DEVICE"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/qr_code_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/qrcodebutton2x" />

        </RelativeLayout>


        <EditText
            android:id="@+id/device_id"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/device_layout"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittext_darkgray"
            android:hint="ID"
            android:paddingLeft="30dp"
            android:singleLine="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_below="@+id/device_layout"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:padding="1dp"
            android:src="@drawable/bottle" />

        <EditText
            android:id="@+id/device_note"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/device_id"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_darkgray"
            android:hint="內容物"
            android:paddingLeft="10dp"
            android:maxLines="1"
            />

        <Button
            android:id="@+id/add_button"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/device_note"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/green_button"
            android:text="ADD"
            android:textColor="#ffffff" />

    </RelativeLayout>

</RelativeLayout>